<?xml version="1.0"?>
<?xml-stylesheet type="text/css" href="xmlpartsstyle.css"?>
<etl_job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../src/main/resources/etl_feed_job.xsd">
    <job_static_param>
        <feed_name>customer_import</feed_name>
        <frequency>DAILY</frequency>
    </job_static_param>

    <extract>
        <type>JDBC</type>
        <format_file_name>true</format_file_name>
        <db_property_file_path>/user/datapipes/%s_bob_live_newsletter_subscription.properties</db_property_file_path>
        <sql_query_file_path>/gitlab-artifacts/db_importer/data_queries/customer_select_query.sql</sql_query_file_path>
        <query_params>
            <param order="1" name="first_date" value="FIRST_DATE"/>
        </query_params>
    </extract>

    <transform>
        <rule order="1" type="SCHEMA_TRANSFORMATION" group="1" failed_field_limit="0" failed_row_limit="10"/>
    </transform>

    <load>
        <type>HIVE</type>
        <task>customer_import</task>
        <db_name>customer_data</db_name>
        <table_name>customer</table_name>
        <file_type>PARQUET</file_type>
        <partition_data>
            <coalesce_partition>true</coalesce_partition>
            <overwrite_partition>true</overwrite_partition>
            <coalesce_partition_count>10</coalesce_partition_count>
            <partition_file_initial_path>/data</partition_file_initial_path>
            <partition_columns>
                <column name="venture" value="VENTURE"/>
                <column name="data_date" value="DATE"/>
            </partition_columns>
        </partition_data>
    </load>
</etl_job>