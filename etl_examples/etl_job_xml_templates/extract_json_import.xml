<?xml version="1.0"?>
<?xml-stylesheet type="text/css" href="xmlpartsstyle.css"?>
<etl_job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../etl_job_conf/etl_feed_job.xsd">
    <job_static_param>
        <feed_name>{hourly_feed_name}</feed_name>
        <frequency>HOURLY</frequency>
    </job_static_param>

    <extract>
        <type>JSON</type>
        <format_file_name>true</format_file_name>
        <file_initial_path>{json-file-path-suffix}</file_initial_path>
        <file_name_pattern>{file-name or file-name-regex}</file_name_pattern>
    </extract>

    <transform>
        <rule order="1" type="SELECT" group='1'>
                <condition>{col1}, {col2}, {col3}</condition>
        </rule>

        <rule order="2" type="SCHEMA_TRANSFORMATION" group="1" failed_field_limit="0" failed_row_limit="10">
            <field_mapping source_name="{example-http-agent}" target_name="{example-http_agent}"/>
        </rule>
    </transform>

    <load>
        <type>HIVE</type>
        <task>{load-task}</task>
        <db_name>{db-name}</db_name>
        <table_name>{table-name}</table_name>
        <file_type>PARQUET</file_type>
        <partition_data>
            <coalesce_partition>true</coalesce_partition>
            <overwrite_partition>true</overwrite_partition>
            <coalesce_partition_count>10</coalesce_partition_count>
            <partition_file_initial_path>{file-path-initial-name}</partition_file_initial_path>
            <partition_columns>
                <column name="{col1}" value="DATE"/>
                <column name="{col2}" value="HOUR"/>
            </partition_columns>
        </partition_data>
    </load>
</etl_job>