<?xml version="1.0"?>
<etlJob xmlns="uri:etlFramework:workflow:0.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="uri:etlFramework:workflow:0.1 ../../etl_job_conf/etl_feed_job.xsd">
    <jobStaticParam jobName="json_example" frequency="ONCE" publishStats="false"/>

    <extract>
        <feed name="json_data" validateExtractedData="false">
            <fileSystem fileType="JSON">
                <dataPath>
                    <pathPattern>
                        <initialPath>/Users/abhisheksharma/work/github-proj/etl-framework/etl_examples/sample_data</initialPath>
                        <fileName>
                            <prefix>json_data</prefix>
                            <suffix>json</suffix>
                        </fileName>
                    </pathPattern>
                </dataPath>
            </fileSystem>
        </feed>
    </extract>

    <transform>
        <rule order="1" type="SELECT" group='1'>
            <condition>test_string2</condition>
        </rule>

        <rule type="SELECT" order="2" group="1">
            <condition>test_string2</condition>
        </rule>

        <validateTransformedData>false</validateTransformedData>
    </transform>

    <load>
        <feed name="json_data">
            <fileSystem fileType="JSON">
                <dataPath>
                    <path>/Users/abhisheksharma/work/github-proj/etl-framework/etl_examples/sample_data/etl-frwrk_result/</path>
                </dataPath>
            </fileSystem>
        </feed>
    </load>
</etlJob>